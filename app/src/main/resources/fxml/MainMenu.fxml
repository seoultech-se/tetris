<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tetris.ui.controllers.MainMenuController">
   <children>
      <ImageView fx:id="backgroundImage" pickOnBounds="true" preserveRatio="false">
         <image>
            <Image url="@/assets/img/Tetris_Background.png" />
         </image>
      </ImageView>
      <VBox alignment="BOTTOM_CENTER" spacing="30.0">
         <children>
            <!-- 첫 번째 줄: 게임 시작, 스코어보드 -->
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStartGame" text="게임 시작" />
                  <Button fx:id="scoreBoardButton" mnemonicParsing="false" onAction="#onScoreBoard" text="스코어보드" />
               </children>
            </HBox>
            <!-- 두 번째 줄: 설정, 종료 -->
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#onSettings" text="설정" />
                  <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExit" text="게임 종료" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</StackPane>