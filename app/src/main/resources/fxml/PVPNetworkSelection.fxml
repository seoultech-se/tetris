<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tetris.ui.controllers.PVPNetworkSelectionController">
   <children>
      <ImageView fx:id="backgroundImage" pickOnBounds="true" preserveRatio="false">
         <image>
            <Image url="@/assets/img/Tetris_Background.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" spacing="30.0">
         <children>
            <Label fx:id="gameModeLabel" text="네트워크 설정" styleClass="title-label">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            
            <!-- 서버/클라이언트 선택 -->
            <VBox fx:id="modeSelectionBox" alignment="CENTER" spacing="20.0">
               <Button fx:id="serverButton" mnemonicParsing="false" focusTraversable="true" onAction="#onServerMode" prefWidth="250.0" text="서버로 시작" styleClass="menu-button">
                  <font>
                     <Font size="18.0" />
                  </font>
               </Button>
               <Button fx:id="clientButton" mnemonicParsing="false" focusTraversable="true" onAction="#onClientMode" prefWidth="250.0" text="클라이언트로 접속" styleClass="menu-button">
                  <font>
                     <Font size="18.0" />
                  </font>
               </Button>
            </VBox>
            
            <!-- 서버 모드: IP 표시 -->
            <VBox fx:id="serverBox" alignment="CENTER" spacing="20.0" visible="false" managed="false">
               <Label text="서버 IP 주소:" styleClass="info-label">
                  <font>
                     <Font size="18.0" />
                  </font>
               </Label>
               <Label fx:id="serverIpLabel" text="192.168.0.1" styleClass="ip-label">
                  <font>
                     <Font size="24.0" />
                  </font>
               </Label>
               <Label text="클라이언트 접속 대기 중..." styleClass="info-label">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
               <Label fx:id="connectionStatusLabel" text="" styleClass="status-label">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
            </VBox>
            
            <!-- 클라이언트 모드: IP 입력 -->
            <VBox fx:id="clientBox" alignment="CENTER" spacing="20.0" visible="false" managed="false">
               <Label text="서버 IP 주소 입력:" styleClass="info-label">
                  <font>
                     <Font size="18.0" />
                  </font>
               </Label>
               <TextField fx:id="serverIpField" promptText="예: 192.168.0.1" prefWidth="250.0" styleClass="ip-field">
                  <font>
                     <Font size="16.0" />
                  </font>
               </TextField>
               <Button fx:id="connectButton" mnemonicParsing="false" onAction="#onConnect" prefWidth="250.0" text="접속" styleClass="menu-button">
                  <font>
                     <Font size="18.0" />
                  </font>
               </Button>
               <Label fx:id="clientStatusLabel" text="" styleClass="status-label">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
            </VBox>
            
            <Button fx:id="backButton" mnemonicParsing="false" focusTraversable="true" onAction="#onBack" prefWidth="250.0" text="뒤로가기" styleClass="menu-button">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
